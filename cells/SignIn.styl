@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/colors'
@import 'mixins/gradient'
@import 'mixins/pos'
@import 'mixins/transition'

.SignIn
  position relative
  panelcolor = hsl(205deg,49%,55%)
  text-align right

  &.selected
    background-color panelcolor
    border-radius 0 0 5px 5px
    box-shadow 0 2px 5px rgba(#000,.5)
    color #FFF

    > a
      color #FFF

    > #auth-login-panel
      display block

  > a.signin
    color rgba(#FFF,.8)
    text-decoration none
    display inline-block
    padding 0 10px 0 10px
    width 150px

    &:hover
      color #FFF
  
  > #auth-login-panel
    display none
    padding 0px 20px 5px 20px
    color #FFF
    text-align right

    input
      color bg-color-dark
      background-color rgba(#FFF,.8)
      margin 0 2px 0 7px
      padding 2px 5px 2px 5px
      width 100px
      outline none
      border-radius 2px
      border none
      box-shadow inset 0 1px 1px rgba(#000,.8)

      &:focus
        background-color #FFF

      &.invalid
        border 2px solid rgba(#F00,.7)
        margin 0 0 0 5px
