@import 'mixins/pos'
@import 'mixins/badge'
@import 'mixins/box'
@import 'mixins/border'
@import 'mixins/colors'
@import 'mixins/transition'
@import 'mixins/ui-button'

.AEDInput
  box horizontal
  box-align center
  height 30px

  > input
    background none
    border-radius 3px
    box-flex 1
    display block
    color text-color
    border none
    box-sizing border-box
    font-size 14px
    outline none
    padding 1px 10px 0px 7px
    margin-right 10px
    height 29px

    &:focus
      background-color rgba(#FFF,.1)

    &:hover
      background-color rgba(#FFF,.05)

    &::-webkit-input-placeholder
    &::-moz-placeholder
      color rgba(#FFF,.3)
      font-style italic

  > .deleteButton
    width 20px
    height 22px
    line-height 30px
    overflow hidden
    transition width 50ms ease-in-out
    cursor pointer
    position relative

    &.confirm
      button()
      width 140px
      height 27px
      box-shadow 0px 1px 4px rgba(#000,.4)

      > .trash
        &:after, &:before, > a:before, > a:after
          top 5px
          border-color #DDD

      &:active:hover
        gradient rgba(#F88,.1), rgba(#F55,.35)

      &:hover
        color #FFF
        gradient rgba(#F55,.35), rgba(#F88,.1)

    &:hover > .trash
      &:after, > a:before, > a:after
        border-color #CCC
    
    > .label
      margin 0 0 0 2px
      line-height 28px

    > .trash
      display inline-block
      icon-color = darken(text-disabled-color,30%)
      height 10px
      margin 0 0 0 2px
      width 20px
      position relative
      z-index 1

      &:after, &:before, > a:before, > a:after
        top 2px

      &:after
        content ''
        left 6px
        width 1px
        height 6px
        border-right 3px double icon-color
        border-left 1px solid icon-color
        margin-top -2px
        position absolute

      > a
        display block
        &:before
          content ''
          left 2px
          width 9px
          height 10px
          margin-top -6px
          border 2px solid icon-color
          background transparent
          position absolute

        &:after
          content ''
          left 5px
          width 3px
          height 2px
          margin-top -9px
          border 2px solid icon-color
          border-bottom 0
          background transparent
          position absolute

          /* css3 */
          -webkit-border-top-left-radius 2px
          -webkit-border-top-right-radius 2px
          -moz-border-radius 2px 2px 0 0
          border-radius 2px 2px 0 0
