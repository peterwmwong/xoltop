@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/colors'

.InitialBadge
	display none
  color text-color
  background-color lighten(#36729F,20%)
  border-radius 5px
  margin 0 5px 0 0
  padding 0px 3px 0px 4px
  border 1px solid rgba(lighten(#36729F,100%),.3)
  text-shadow none
  box-shadow 0px 1px 2px rgba(#000,.2)

  &.loggedIn
  	display inline-block