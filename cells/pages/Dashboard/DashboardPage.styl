@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

.DashboardPage
  font-family Helvetica, Arial, sans-serif
  background-color bg-color-dark
  width 100%
  height 100%
  overflow auto

  > .stats
    width 100%
    height 90px
    gradient bg-color-dark shadow-color
    position relative
    overflow hidden
    padding-top 20px
    font-size 8px
    text-align center

    &:before
      content ""
      abspos 0px -10px -1px -10px
      box-shadow inset 0px 0px 10px lighten(#111,50%)

    > *
      display inline-block

    red = darken(desaturate(badge-red,20%),20%)
    > .iteration
      position relative
      width 70px

      > .iterNum
        &::before
          abspos 4px false false 17px
          
        &::after
          abspos 4px 17px false false

        &::after, &::before
          box-shadow inset 0px 1px 1px shadow-color-dark
          background-color bg-color-dark
          border-radius 5px
          content ""
          display block
          height 6px
          width 6px

        box-shadow 0px 2px 5px lighten(shadow-color-dark,60%)
        text-shadow 0px -1px 0px rgba(0,0,0,.5)
        border-radius 3px
        background-color #666
        color text-color-dark
        font-size 32px
        font-weight bold
        height 100%
        margin-bottom 4px
        padding 15px 0 8px 0
        text-align center
        vertical-align middle
        width 100%

      > .iterLabel
        color text-disabled-color
        text-align center
        font-size 13px
        font-weight bold
    
    paddingAmt = 30px
    > .failingTests
      padding-left 40px

      > .icon
        color desaturate(lighten(badge-red,30%),20%)
        box-shadow 0px 2px 5px lighten(shadow-color-dark,60%)
        text-shadow 0px -1px 0px rgba(0,0,0,.5)
        text-align center
        font-size 16px
        font-weight bold
        background-color desaturate(darken(red,30%),20%)
        border-radius 5px 0 0 5px
        padding 2px 10px 1px 10px
        height 53px
        line-height 16px
        margin-bottom 3px

        > div
          padding-top 14px

          > div
            font-size 12px
            text-align center
            padding-left 6px
            letter-spacing 6px
        
      > .label
        font-weight bold
        font-size 13px
        color text-disabled-color
        text-align center
    
    > .ATCount, .UnitCount, .SmallCount
      &:last-child > .count
        border-radius 0 5px 5px 0

      > .count.passing
        color lighten(desaturate(badge-green,40%),100%)
        background-color badge-green

      > .count
        color lighten(badge-red,70%)
        text-shadow 0px -1px 0px rgba(0,0,0,.5)
        box-shadow 0px 2px 5px lighten(shadow-color-dark,60%)
        text-align center
        font-size 40px
        font-weight bold
        background-color red
        padding 2px paddingAmt 1px paddingAmt
        line-height 54px
        height 53px
        margin-bottom 3px

      > .label
        font-variant small-caps
        font-weight bold
        font-size 13px
        color text-disabled-color
        text-align center


