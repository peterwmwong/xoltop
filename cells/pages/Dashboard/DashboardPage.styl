@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

.DashboardPage
  //background-color darken(bg-color-dark,20%)
  font-family Helvetica, Arial, sans-serif
  background-color bg-color-dark
  width 100%
  height 100%
  overflow auto

  > .stats
    width 100%
    height 100px
    gradient bg-color-dark shadow-color
    position relative
    overflow hidden
    padding-top 20px

    &:before
      content ""
      abspos 1px -10px 0px -10px
      box-shadow inset 0px 0px 10px lighten(#111,50%)

    > .iteration
      margin-left 100px
      display inline-block
      position relative
      width 80px

      > .iterNum
        &::before
          abspos 4px false false 20px
          
        &::after
          abspos 4px 20px false false

        &::after, &::before
          box-shadow inset 0px 1px 1px shadow-color-dark
          background-color bg-color-dark
          border-radius 5px
          content ""
          display block
          height 5px
          width 5px

        box-shadow 0px 2px 5px shadow-color
        border-radius 2px
        background-color #666
        color text-color-dark
        font-size 32px
        font-weight bold
        text-align center
        margin-bottom 4px
        padding 15px 0 8px 0
        width 100%
        height 100%
        vertical-align middle

      > .iterLabel
        color text-disabled-color
        text-align center
        font-size 13px
        font-weight bold
        letter-spacing 1px


    > .failingTests
      padding-left 50px
      display inline-block

      > .iconLabel
        > .icon
          color shadow-color
          text-align center
          font-size 48px
          font-weight bold
          background-color #B44
          border-radius 3px
          padding-bottom 1px
          padding-top 2px
          height 53px
          margin-bottom 3px
          
        > .label
          font-weight bold
          font-size 13px
          color text-disabled-color



