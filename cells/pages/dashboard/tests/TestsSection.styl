@import 'mixins/pos';
@import 'mixins/badge';
@import 'mixins/box';
@import 'mixins/border';
@import 'mixins/colors';

.TestsSection
  > .CatTable > table > tbody > tr
    &.fail > .id > a
      color lighten(badge-red,80%)

    &.towrite > .id > a
      color lighten(badge-yellow,80%)

    &.pass > .id > a
      color lighten(badge-green,80%)

    > .category
      amt = .25
      lamt = 90%
      &.fail
        background-color rgba(badge-red,amt)
        color lighten(badge-red,lamt)

      &.towrite
        background-color rgba(badge-yellow,amt)
        color lighten(badge-yellow,lamt - 10%)

      &.pass
        background-color rgba(badge-green,amt)
        color lighten(badge-green,lamt - 10%)

    > .category
      text-align left

    > .column
      vertical-align middle
      line-height 16px

      &.status, &.date, &.owner
        padding 0 5px 0 5px

      &.name
        padding 15px 0 15px 0
        > .needsAttn
          background-color badge-red
          border-radius 7px
          padding 2px 3px 2px 3px
          font-size 11px
          color text-color
          font-weight bold
          margin-right 3px
        > a
          color text-color-dark
          text-decoration none

          &:hover
            text-decoration underline

      &.id
        width 60px
        min-width 60px
        font-size 16px
        font-weight bold
        text-align center
        padding 0 5px 0 2px

        > a
          text-decoration none

          &:hover
            text-decoration underline




