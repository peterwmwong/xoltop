@import 'mixins/pos';
@import 'mixins/badge';
@import 'mixins/box';
@import 'mixins/border';
@import 'mixins/colors';

.CodeSection

  > .newCodeTaskContainer
    width 100%
    height 35px
    margin 10px 0 10px 0
    position relative

    > input.newCodeTask
      abspos 0px 0px 0px 0px
      color #FFF
      background-color rgba(#FFF,.05)
      border-radius 3px
      border none
      font-size 14px
      outline none
      padding 0px 5px 0px 5px

      &::-webkit-input-placeholder
      &::-moz-placeholder
        color rgba(#FFF,.3)
    
  > .nocodetasks
    width 100%
    text-align center
    font-weight bold
    padding 15px 0 0 0
    color bg-color-light

  > .CatTable > table
    table-layout fixed

  > .CatTable > table > tbody > tr
    > .category
      text-align left
      amt = .25
      lamt = 90%
      &.notStarted
        background-color rgba(badge-red,amt)
        color lighten(badge-red,lamt)

      &.inProgress
        background-color rgba(badge-yellow,amt)
        color lighten(badge-yellow,lamt - 10%)

      &.complete
        background-color rgba(badge-green,amt)
        color lighten(badge-green,lamt - 10%)

    > .column
      vertical-align middle

      &.description
        width 100%
        padding 0 0 0 10px

        > a
          color text-color-dark
          text-decoration none

          &:hover
            text-decoration underline

      &.owner
        text-align center
        width 80px
        min-width 80px
