@import 'mixins/pos';
@import 'mixins/badge';
@import 'mixins/box';
@import 'mixins/border';
@import 'mixins/colors';

.CodeSection
  padding 10px
  position relative
    
  > .nocodetasks
    width 100%
    text-align center
    font-weight bold
    padding 15px 0 0 0
    color bg-color-light

  > .CatTable
    > .category
      amt = .25
      lamt = 55%
      &.notStarted
        > .header
          redcolor = lighten(badge-red,lamt)
          background-color rgba(badge-red,amt)
          color redcolor
          position relative

      &.inProgress
        > .header
          background-color rgba(badge-yellow,amt)
          color lighten(badge-yellow,lamt - 10%)

      &.complete
        > .header
          background-color rgba(badge-green,amt)
          color lighten(badge-green,lamt - 10%)
      
      > .header
        text-align left

      > .members > .member > .column
        vertical-align middle

        &.description
          box-flex 1
          overflow hidden
          text-overflow ellipsis
          white-space nowrap

          > a
            color text-color-dark
            text-decoration none

            &:hover
              text-decoration underline

        &.owner
          text-align right
          width 80px
