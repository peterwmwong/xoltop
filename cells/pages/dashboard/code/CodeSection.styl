@import 'mixins/pos';
@import 'mixins/badge';
@import 'mixins/box';
@import 'mixins/border';
@import 'mixins/colors';

.CodeSection
  padding 10px
  position relative

  > .newCodeTaskContainer
    width 100%
    height 30px
    margin 0px 0 10px 0
    position relative
    box horizontal

    > input.newCodeTask
      box-flex 1
      display block
      color #FFF
      background-color rgba(#FFF,.05)
      border-radius 3px
      border none
      box-sizing border-box
      font-size 14px
      outline none
      line-height 30px
      margin 0
      padding 0px 10px 0px 10px

      &::-webkit-input-placeholder
      &::-moz-placeholder
        color rgba(#FFF,.3)
        font-style italic

    > .addButton
      color text-color-dark
      border-radius 5px
      box-shadow 0px 1px 3px rgba(#000,.15)
      font-weight bold
      font-size 12px
      line-height 30px
      gradient rgba(#888,.4), rgba(#888,.15)
      letter-spacing 1px
      margin-left 5px
      overflow hidden
      text-align center
      text-shadow 0px -1px 0px #222
      width 75px

      > .plus
        color text-disabled-color
        font-weight bold
        margin-right 3px
    
  > .nocodetasks
    width 100%
    text-align center
    font-weight bold
    padding 15px 0 0 0
    color bg-color-light

  > .CatTable
    > .category
      amt = .25
      lamt = 90%
      &.notStarted
        > .header
          background-color rgba(badge-red,amt)
          color lighten(badge-red,lamt)

      &.inProgress
        > .header
          background-color rgba(badge-yellow,amt)
          color lighten(badge-yellow,lamt - 10%)

      &.complete
        > .header
          background-color rgba(badge-green,amt)
          color lighten(badge-green,lamt - 10%)
      
      > .header
        text-align left

      > .members > .member > .column
        vertical-align middle

        &.description
          box-flex 1

          > a
            color text-color-dark
            text-decoration none

            &:hover
              text-decoration underline

        &.owner
          text-align right
          width 80px
