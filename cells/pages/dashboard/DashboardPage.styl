@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

.DashboardPage
  font-family Helvetica, Arial, sans-serif
  background-color bg-color-dark
  width 100%
  height 100%
  overflow auto

  > .stats
    width 100%
    height 85px
    gradient bg-color-dark shadow-color
    position relative
    overflow hidden
    padding-top 15px
    font-size 8px
    text-align center

    &:before
      content ""
      abspos 0px -15px -1px -15px
      box-shadow inset 0px 0px 15px #1D1D1D

    > *
      display inline-block

    > .TestResultsGraph
      vertical-align top
      margin 0 5px 0 5px

    red = lighten(saturate(badge-red,0%),0%)
    > .iteration
      position relative
      width 70px
      margin-right 20px

      > .iterNum
        &::before
          abspos 4px false false 17px
          
        &::after
          abspos 4px 17px false false

        &::after, &::before
          box-shadow inset 0px 1px 1px shadow-color-dark
          background-color bg-color-dark
          border-radius 5px
          content ""
          display block
          height 6px
          width 6px

        box-shadow 0px 2px 5px lighten(shadow-color-dark,60%)
        text-shadow 0px -1px 0px rgba(0,0,0,.5)
        border-radius 3px
        background-color #666
        color text-color-dark
        font-size 32px
        font-weight bold
        height 100%
        margin-bottom 4px
        padding 15px 0 8px 0
        text-align center
        vertical-align middle
        width 100%

      > .iterLabel
        color text-disabled-color
        text-align center
        font-size 13px
        font-weight bold
    
