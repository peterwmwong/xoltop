@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

.DashboardPage
  font-family Helvetica, Arial, sans-serif
  background-color bg-color-dark
  width 100%
  height 100%
  overflow auto
  z-index 1

  > .LoadingIndicator
    abspos 115px 0px 0px 0px
    z-index 999

  > .stats
    width 100%
    height 85px
    gradient bg-color-dark shadow-color
    position relative
    overflow hidden
    padding-top 15px
    font-size 8px
    text-align center

    &:before
      content ""
      abspos 0px -15px -1px -15px
      box-shadow inset 0px 0px 15px #1D1D1D

    > *
      display inline-block

    > .TestResultsGraph
      vertical-align top
      margin 0 5px 0 5px

    red = lighten(saturate(badge-red,0%),0%)
    > .IterationChooser
      margin-right 30px

    
