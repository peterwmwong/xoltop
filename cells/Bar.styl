@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/gradient'
@import 'mixins/pos'
@import 'mixins/transition'

.Bar
  maincolor = #2B597C
  maincolor-hi = rgb(63,137,194)
  background-color #36729F
  box-shadow 0 1px 3px #111

  font-family Helvetica, Arial, sans-serif
  letter-spacing 1px
  font-size 12px

  > *
    display inline-block
  
  > #xoltop
    position relative
    width 112px

    > #label
      abspos -12px 0px 0px 0px
      color rgba(255,255,255,.75)
      display inline-block
      font-weight bold
      font-size 16px
      text-align center
      vertical-align middle

  > .SearchInput
    abspos 8px 5px false false
    width 120px

  > .navItemContainer
    padding 10px 4px 0px 0px
    position relative
    text-align center
    
    > .navItem
      border-radius 5px
      color rgba(255,255,255,.5)
      font-weight bold
      padding 4px 8px 3px 8px
      text-decoration none
      transition color 250ms ease

      &.selected
      &.selected:hover
        color #FFF
        box-shadow inset 0px 1px 2px rgba(#000,.5)
        background-color rgba(#000,.3)

      &:hover
        color #FFF


