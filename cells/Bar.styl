@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/colors'
@import 'mixins/gradient'
@import 'mixins/pos'
@import 'mixins/transition'

.Bar
  background-color #36729F
  box-shadow 0 1px 3px #111

  font-family 'Maven Pro', Helvetica, Arial, sans-serif
  letter-spacing 1px
  font-size 10px
  font-weight bold
  line-height 22px
  text-shadow 0 -1px 0 rgba(#000,.3)
  padding 1px 0 0 105px

  > #xoltop
    abspos 0px false false 20px
    color rgba(#FFF,.8)
    font-size 14px

  > .navItemContainer
    text-align center
    
    > .navItem
      border-radius 3px
      color rgba(#FFF,.6)
      padding 3px 6px 3px 7px
      text-decoration none
      transition color 250ms ease

      &.selected
      &.selected:hover
      &.hover
        color #FFF
        box-shadow inset 0px 1px 2px rgba(#000,.5)
        background-color rgba(#000,.3)

  > .SignIn
    float right
    margin-right 5px