@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/colors'
@import 'mixins/gradient'
@import 'mixins/pos'
@import 'mixins/transition'

.Bar
  background-color #36729F
  box-shadow 0 1px 3px #111

  font-family Helvetica, Arial, sans-serif
  letter-spacing 1px
  font-size 12px
  font-weight bold
  line-height 32px
  text-shadow 0 -1px 0 rgba(#000,.3)

  > #xoltop
    color rgba(#FFF,.8)
    padding 0 20px 0 20px
    font-size 16px
    position relative
    text-align center
    vertical-align middle
    width 112px

  > .navItemContainer
    text-align center
    
    > .navItem
      border-radius 5px
      color rgba(#FFF,.6)
      padding 4px 8px 3px 8px
      text-decoration none
      transition color 250ms ease

      &.selected
      &.selected:hover
      &.hover
        color #FFF
        box-shadow inset 0px 1px 2px rgba(#000,.5)
        background-color rgba(#000,.3)

  > .SignIn
    float right
    margin-right 5px

